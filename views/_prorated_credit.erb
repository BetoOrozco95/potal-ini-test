<% if @current_account_or_token %>
  <% if @current_account_or_token.prorated_credit.to_f > 0 %>
    <div class="row">
      <div class="col-12">
        <p class="text-center">
          You have approximately <strong> <%= @current_account_or_token.prorated_credit.to_i %>
          units of credit </strong> that will be automatically applied to your next
          purchase.
        </p>
      </div>
    </div>
  <% end %>
<% end %>
