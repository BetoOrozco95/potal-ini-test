<%= form_tag({:action => :shared_credential_login}, {:id => 'shared_credential_login'}) do %>
  <fieldset>
    <div class="form-row">
      <legend class="col-12 text-center">Access Code</legend>
    </div>
    <div class="form-row">
      <div class="form-group col-12">
        <label class="sr-only" for="credential">Enter Code</label>
        <%= password_field_tag 'credential', '', :placeholder => 'Enter Code...', :class => 'form-control form-control-lg', :title => 'code' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-12">
        <%= render :partial => 'terms_checkbox' %>
        <%= button_tag('Sign In', :class => 'd-block mx-auto col-6 btn btn-lg btn-primary shadow-sm', :data => { :disable_with => '<span class="spinner-border spinner-border-sm align-middle" role="status" aria-hidden="true"></span> Please wait...' }) %>
      </div>
    </div>
  </fieldset>
<% end %>
