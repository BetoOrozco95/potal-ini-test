<%= form_tag({:action => :ldap_login}, {:id => 'ldap_login'}) do %>
  <fieldset>
    <div class="form-row">
      <legend class="col-12 text-center">LDAP Login</legend>
    </div>
    <div class="form-row">
      <div class="form-group col-12">
        <%= label_tag 'login', 'Login', {:class => 'sr-only'} %>
        <%= text_field_tag 'login', params[:login], :title => 'Login', :placeholder => 'Login...', :class => 'form-control form-control-lg', :autocorrect => :off, :autocapitalize => :off %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-12">
        <%= label_tag 'password', 'Password', {:class => 'sr-only'} %>
        <%= password_field_tag 'password', '', :title => 'Password', :placeholder => 'Password...', :class => 'form-control form-control-lg' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-12">
        <%= label_tag 'ldap_domain', 'Ldap Domain', {:class => 'sr-only'} %>
        <%= select :ldap_domain, :id,
          (@captive_portal.try(:ldap_domains) || LdapDomain.all).collect { |ld| [ ld.name, ld.id ] }, {}, {:class => 'uk-width-1-1 form-control form-control-lg shadow-sm'} %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-12">
        <%= button_tag('Sign In', :class => 'd-block mx-auto col-6 btn btn-lg btn-primary shadow-sm', :data => { :disable_with => '<span class="spinner-border spinner-border-sm align-middle" role="status" aria-hidden="true"></span> Please wait...' }) %>
      </div>
    </div>
  </fieldset>
<% end %>
